#!/usr/bin/env python

import sys
import dbus

if len(sys.argv) != 2:
  print """Usage: %s <command>
  Where <command> is either 'magnify' or 'select_color'""" % sys.argv[0]
  exit(1)

bus = dbus.SessionBus()
obj = bus.get_object('com.rephorm.elicit', '/com/rephorm/Elicit')

command = sys.argv[1]
if command == 'magnify':
  obj.Magnify()
elif command == 'select_color':
  obj.SelectColor()

